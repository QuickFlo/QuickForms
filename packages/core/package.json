{
  "name": "@quickflo/quickforms",
  "version": "0.3.0",
  "description": "Framework-agnostic core for QuickForms - JSON Schema form generator",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
